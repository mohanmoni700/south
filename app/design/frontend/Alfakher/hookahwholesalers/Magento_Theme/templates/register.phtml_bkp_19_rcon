<script>
require(['jquery'], function($){
    $(document).ready(function(){
        $('.sign-in').click(function(e){
             $('.sign-up-ul').toggle();
             $('.sign_in_overlay').toggle();
        });
        $(document).on('click','.sign_in_overlay',function(){
         $('.sign-up-ul').hide();
         $(this).hide();
        });
    });
});
</script>