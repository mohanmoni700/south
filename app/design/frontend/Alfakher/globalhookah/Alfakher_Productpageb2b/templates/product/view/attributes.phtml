    $_helper = $this->helper(Magento\Catalog\Helper\Output::class);
    $_product = $block->getProduct();
    $attributeValue = $_product->getData('gh_charcoal_shape');
    if ($attributeValue !== null && $attributeValue !== '') {
        echo 'Attribute Value: ' . $attributeValue;
    } else {
        echo 'Attribute Value not available or empty.';
    }
    $attributeCodes = ['gh_charcoal_shape'];
?>

<div class ="main_wrapper">
<div class="product_attributes">
<div class = "Product_attributes_head">
<span>
Al Fakher Tobacco Specs
</span>
</div>


<table id="t">
  <tbody>
  <?php foreach ($attributeCodes as $attributeCode): ?>
    <tr>
      <td class="w"><?php echo $attributeCode; ?>:</td>
      <td>
                        <?php
                            $attributeValue = $_product->getData($attributeCode);
                            if ($attributeValue !== null && $attributeValue !== '') {
                                echo $attributeValue;
                            }
                        ?>
        </td>
    </tr>
    <?php endforeach; ?>
  </tbody>
</table>
</div>
</div>



<?php if ($_additional = $block->getAdditionalData()) :?>
    <div class="additional-attributes-wrapper table-wrapper">
        <table class="data table additional-attributes" id="product-attribute-specs-table">
            <caption class="table-caption"><?= $block->escapeHtml(__('More Information')) ?></caption>
            <tbody>
            <?php foreach ($_additional as $_data) :?>
                <tr>
                    <th class="col label" scope="row"><?= $block->escapeHtml($_data['label']) ?></th>
                    <td class="col data" data-th="<?= $block->escapeHtmlAttr($_data['label']) ?>"><?= /* @noEscape */ $_helper->productAttribute($_product, $_data['value'], $_data['code']) ?></td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
    </div>
<?php endif;?>
