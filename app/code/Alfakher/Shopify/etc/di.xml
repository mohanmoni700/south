<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    
    <preference for="Alfakher\Shopify\Api\CustomerRepositoryInterface" type="Alfakher\Shopify\Model\Api\CustomerCreate" />
    
    <type name="Alfakher\Shopify\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Alfakher\Shopify\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">shopifyMagento</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Alfakher\Shopify\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>