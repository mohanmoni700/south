<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="exitb_ordersync" resource="default" engine="innodb" comment="ExitB order Sync">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="true" comment="Order Id"/>
        <column xsi:type="varchar" name="customer_email" nullable="true" length="255" comment="Customer Email"/>
        <column xsi:type="int" name="increment_id" padding="10" unsigned="true" nullable="true" comment="Order Increment Number"/>
        <column xsi:type="varchar" name="sync_status" padding="10" unsigned="true" nullable="true" comment="Sync Status"/>
        <column xsi:type="varchar" name="request_param" nullable="true" length="255" comment="Request Param"/>
        <column xsi:type="varchar" name="response_param" nullable="true" length="255" comment="Response Param"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" table="exitb_ordersync" column="order_id" referenceTable="sales_order" referenceColumn="entity_id" onDelete="CASCADE">
        </constraint>
    </table>
</schema>
