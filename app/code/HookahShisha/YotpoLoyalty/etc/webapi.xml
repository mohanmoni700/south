<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/yotpo/index/create_coupon" method="POST">
        <service class="HookahShisha\YotpoLoyalty\Api\CreateCouponManagementInterface" method="postCreateCustomCoupon"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/yotpo/index/delete_coupon">
        <service class="HookahShisha\YotpoLoyalty\Api\DeleteCouponManagementInterface" method="postDeleteCustomCoupon"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
