<table class="info-table">
    <tbody>
    <tr>
        <th><span class="nobr"><?php echo __('Profile Number:'); ?></span></th>
        <td><?php echo '#' . $block->getSubscription()->getProfileId(); ?></td>
    </tr>
    <tr>
        <th><span class="nobr"><?php echo __('Profile Status:'); ?></span></th>
        <td><?php echo $block->getSubscriptionStatus(); ?></td>
    </tr>
    <tr>
        <th><span class="nobr"><?php echo __('Product Name:'); ?></span></th>
        <td>
            <?php if ($block->getProductUrl() == '#'): ?>
                <?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getSubscription()->getProductName()); ?>
