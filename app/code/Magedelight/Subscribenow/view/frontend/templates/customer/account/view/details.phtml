        <td>
        <?php if ($block->isEditMode()): ?>
            <input type="text"
                   name="qty"
                   value="<?php echo $block->getQtyOrdered() ?>"
                   class="input-text required-entry validate-greater-than-zero validate-digits"
                   aria-required="true"
